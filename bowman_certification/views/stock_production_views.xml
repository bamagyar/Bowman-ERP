<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

      <record id="view_production_lot_form_inherit_bowman" model="ir.ui.view">
        <field name="name">view_production_lot_form_inherit_bowman</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
	      <xpath expr="//field[@name='ref']" position="after">
		<field name="labeled_value_ids">
		  <tree string="Certification Labeled Values" editable="top">
		    <field name="element_id" can_create="true" can_write="true"/>
		    <field name="value"/>
		    <field name="uom_id"/>
		  </tree>
		  <form>
		    <sheet string="Certification Labeled Values">
		      <div class="oe_title">
			<h1>
			  <field name="value" required="1" modifiers="{&quot;required&quot;: true}"/>
			</h1>
		      </div>
		      <group>
			<group>
			  <field name="sequence"/>
			  <field name="element_id" can_create="true" can_write="true" modifiers="{}"/>
			  <field name="uom_id"/>
			  <field name="second_value"/>
			  <field name="second_uom_id"/>
			</group>
			<group/>
		      </group>
		    </sheet>
		  </form>
		</field>
		<field name="manufacturer_id"/>
	      </xpath>
            </field>
        </record>


      <record id="view_production_lot_form_simple_inherit_bowman" model="ir.ui.view">
        <field name="name">view_production_lot_form_simple_inherit_bowman</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form_simple"/>
            <field name="arch" type="xml">
	      <xpath expr="//field[@name='ref']" position="after">
		<field name="labeled_value_ids">
		  <tree string="Certification Labeled Values" editable="top">
		    <field name="sequence"/>
		    <field name="element_id" can_create="true" can_write="true"/>
		    <field name="value"/>
		    <field name="uom_id"/>
		    <field name="second_value"/>
		    <field name="second_uom_id"/>
		  </tree>
		  <form>
		    <sheet string="Certification Labeled Values">
		      <div class="oe_title">
			<h1>
			  <field name="value" required="1" modifiers="{&quot;required&quot;: true}"/>
			</h1>
		      </div>
		      <group>
			<group>
			  <field name="sequence"/>
			  <field name="element_id" can_create="true" can_write="true" modifiers="{}"/>
			  <field name="uom_id"/>
			  <field name="second_value"/>
			  <field name="second_uom_id"/>
			</group>
			<group/>
		      </group>
		    </sheet>
		  </form>
		</field>
		<field name="manufacturer_id"/>
	      </xpath>
            </field>
        </record>



    </data>
</odoo>
