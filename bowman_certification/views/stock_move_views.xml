<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

      <record id="view_picking_form_inherit_bowman" model="ir.ui.view">
          <field name="name">view_picking_form_inherit_bowman</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
	      <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="inside">
		<field name="create_service" invisible="1"/>
	      </xpath>


	      <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='move_line_ids']/tree[1]/field[@name='product_id']" position="after">
		<field name="create_service" invisible="1"/>
		<field name="name" invisible="1"/>
		<field name="service_lot_id" context="{'default_product_id': product_id, 'default_ref': name}" attrs="{'required': [('create_service', '=', True)], 'column_invisible': [('parent.create_service', '=', False)]}"/>
	      </xpath>

            </field>
        </record>
    </data>
</odoo>
