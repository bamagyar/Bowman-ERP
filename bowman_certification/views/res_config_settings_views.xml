<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_bowman" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.inherit.bowman</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
	  <xpath expr="//div[@data-key='stock']/div[1]" position="inside">	    
	  <div class="col-12 col-lg-6 o_setting_box" title="Define Certification Reading UoM">
	    <div class="o_setting_left_pane"/>
	    
	    <div class="o_setting_right_pane">
	      <label for="reading_uom_id"/>
	      <div class="text-muted">
		Select Certification Reading UoM.
	      </div>
	      <div class="content-group">
		<div class="mt16">
		  <!-- <label for="reading_uom_id" class="o_light_label"/> -->
		  <field name="reading_uom_id" class="oe_inline"/>
		</div>
	      </div>
	    </div>
	  </div>
	  
	  </xpath>

	</field>
    </record>

</odoo>
